{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@app/api-gateway": ["api-gateway/src"],
      "@app/api-gateway/*": ["api-gateway/src/*"],
      "@core/logger": ["modules/core/logger/src"],
      "@core/logger/*": ["modules/core/logger/src/*"],
      "@modules/customer": ["modules/customer/src"],
      "@modules/customer/*": ["modules/customer/src/*"],
      "@shared": ["shared/src"],
      "@shared/*": ["shared/src/*"]
    }
  }
}
